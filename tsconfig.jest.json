{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["node", "jest"],
    // Added to satisfy TS2209 (ambiguous project root) when resolving package export maps under NodeNext
    "rootDir": ".",
    // Override build module settings so ts-jest transpiles ESM imports to CJS for Jest runtime
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noEmit": true
  },
  "include": ["packages/**/*.test.ts", "packages/**/*.test.tsx", "packages/**/__tests__/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
