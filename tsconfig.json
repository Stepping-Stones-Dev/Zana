{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2020"],
    "types": ["node"],
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@zana/events": ["packages/events/src/events/index.ts"],
      "@zana/events/*": ["packages/events/src/*"],
      "@zana/logging": ["packages/logging/src/index.ts"],
      "@zana/logging/*": ["packages/logging/src/*"],
      "@zana/sanitize": ["packages/sanitize/src/index.ts"],
      "@zana/sanitize/*": ["packages/sanitize/src/*"]
    },
    "noEmit": true,
    "allowJs": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": ["next-env.d.ts", "packages/**/*.ts", "apps/**/*.ts", "apps/**/*.tsx", "packages/**/*.tsx"],
  "exclude": ["node_modules", "packages/**/dist"]
}

